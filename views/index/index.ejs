<%- include('../includes/head.ejs') %>
</head>
<body>

  <div class="site-wrap">

    <%- include('../includes/nav.ejs') %>

    

    <div class="container pt-5 hero">
      <div class="row align-items-center text-center text-md-left">
        
        <div class="col-lg-4">
          <h1 class="mb-3 display-3">Tell Your Story to the World</h1>
          <p>Join with us! Login or Register. Share your story to the world to make a change and make the world a better place.</p>
        </div>
        <div class="col-lg-8">
          <img src="images/home.png" alt="Image" class="img-fluid">    
        </div>
      </div>
    </div>
    

    <div class="site-section">
      <div class="container">

        <div class="row">
          <div class="col-lg-3">
            <div class="featured-user  mb-5 mb-lg-0">
              <h3 class="mb-4">Popular Author</h3>
              <ul class="list-unstyled">
                <li>
                  <a href="#" class="d-flex align-items-center">
                    <% if(posts.length > 0 ) { %>
                    <img src="<%= posts[0].imageUrl %>" alt="Image" class="img-fluid mr-2">
                    <div class="podcaster">
                  
                      <span class="d-block"><%= posts[0].name %></span>
                 
                      <span class="small"><%= posts.length %></span>
                    </div>
                    <% } %>
                  </a>
                </li>
               
              </ul>
            </div>
          </div>

       <div class="col-lg-9">
         <% if(posts.length > 0 ) { %>
        <% for (p of posts) { %>
          <div class="d-block d-md-flex podcast-entry bg-white mb-5" data-aos="fade-up">
            <div class="image" style="background-image: url('/<%= p.imageUrl %>');"></div>
            <div class="text">

              <h3 class="font-weight-light"><a href="/post/<%- p._id %>"><%= p.title %></a></h3>
              <div class="text-white mb-3"><span class="text-black-opacity-05"><small>By <%= p.name %> <span class="sep">/</span> <%= p.postDate %> </small></span></div>
              <%- p.tagline %>
              
              </div>
             
            </div>
            <% } %>

            <% } else { %> No Posts Found <% } %>

            


           

                </div>
                    
                    <%- include('../includes/pagination.ejs', {currentPage,nextPage,previousPage,hasNextPage,hasPreviousPage,lastPage}) %>
                  </div>
                </div>
              </div>
  

    <div class="site-section bg-light block-13">
      <div class="container">
        <div class="row mb-5">
          <div class="col-md-12 text-center">
            <h2 class="font-weight-bold text-black">Featured Posts</h2>
          </div>
        </div>
        <div class="nonloop-block-13 owl-carousel">
          <% for (p of posts) { %>
          <div class="text-center p-3 p-md-5 bg-white">
            <div class="mb-4">            
              <img src="<%= p.imageUrl %>" alt="Image" class="w-50 mx-auto img-fluid rounded-circle">
            </div>
            <div class="">
              <h3 class="font-weight-light h5"><%= p.name %></h3>
              <p><a href="/post/<%= p._id %>" target="="_blank><%= p.title %></a></p>
            </div>
          </div>
<% } %>
      

        </div>
      </div>
    </div>
    <br>
  
    <%- include('../includes/subscribe.ejs') %>


   <%- include('../includes/footer.ejs') %>
  </div>

 <%- include('../includes/scripts.ejs') %>

<%- include('../includes/end.ejs') %>