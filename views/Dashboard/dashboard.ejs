        <div class="content">
          <div class="row">
            <div class="col-lg-12 col-md-12">
              <div class="card">
                <div class="card-header">
                  <h4 class="card-title">Posts</h4>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table tablesorter" id="">
                      <thead class="text-primary">
                        <tr>
                          <th>
                            Name
                          </th>
                          <th>
                            Title
                          </th>
                          <th>
                            ImageUrl
                          </th>
                          <th>
                            Category
                          </th>
                          <th class="text-center">
                            Description
                          </th>
                            <th>
                                  Taglline
                                </th>
                                <th>
                                  updatedAt
                                </th>
                                <th>Edit</th>
                                <th>Delete</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for (post of posts) { %>
                          <tr>
                            <td>
                              <%= post.name %>
                            </td>
                            <td>
                              <%= post.title %>
                            </td>
                            <td>
                              <%= post.imageUrl %>
                              
                            </td>
                            <td>
                              <%= post.category %>
                              
                            </td>
                            <td >
                              <%= post.description.slice(0,20) %>
                            </td>
                            <td>
                             <%= post.tagline.slice(0,80) %>
                            </td>
                            <td>
                              <%= post.postDate %>
                            </td>
                            <td>
                              <a href="/admin/edit-post/<%= post._id %>?edit=true"><button type="button" class="btn btn-primary">Edit</button></a>

                            </td>  
                             <td>
                               <form action="/admin/delete" method="POST">
                                <input type="hidden" value="<%= post._id %>" name="postId">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                              <button type="submit" class="btn btn-primary">Delete</button>
                              </form>
                            </td>
                            <input type="hidden" value="<%= post._id %>" name="postId">
                          </tr>
                          
                          <% } %>
                          
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
